<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	  <ThingDef ParentName="BaseMakeableGrenade">
    <defName>SporeBombFungi</defName>
    <label>Spore capsule</label>
    <description>A capsule filled with mold spores and shroomworm powder.After the Capsule is shattered, poisonous spores attack the breathing systems of everyone who breathes it in. However, the spores are very unstable. The infection will vanish after 2 hours.</description>
    <tickerType>Normal</tickerType>
    <recipeMaker>
      <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <researchPrerequisite>SporeInfusion</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <effectWorking>Tailor</effectWorking>
      <!-- SmithingSpeed -->
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>Sporeforge</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
    </recipeMaker>
    <weaponTags>
      <li>FungiMold</li>
      <li>FungiGrenade</li>
    </weaponTags>
    <graphicData>
      <texPath>Things/Item/Equipment/SporeThrower</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <soundInteract>Interact_Grenade</soundInteract>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <Mass>15</Mass>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
      <MaxHitPoints>75</MaxHitPoints>
      <MarketValue>200</MarketValue>
      <WorkToMake>2500</WorkToMake>
    </statBases>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <costList>
      <RAW_SHROOMANSINFESTED_RESOURCE_DEF>50</RAW_SHROOMANSINFESTED_RESOURCE_DEF>
    </costList>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>24.5</range>
        <forcedMissRadius>0.5</forcedMissRadius>
        <warmupTime>2.5</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_AvoidFriendlyFireRadius>15</ai_AvoidFriendlyFireRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Spore_Bomb</defaultProjectile>
        <soundCast>SporeThrower</soundCast>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
        <requireLineOfSight>true</requireLineOfSight>
        <onlyManualCast>true</onlyManualCast>
      </li>
    </verbs>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>Spore_Bomb</defName>
    <label>Spore Capszle</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Item/Equipment/SporeBomb</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <projectile>
      <speed>8</speed>
      <explosionRadius>4.5</explosionRadius>
      <damageAmountBase>10</damageAmountBase>
      <damageDef>Sporecapsule</damageDef>
      <explosionDelay>4</explosionDelay>
      <soundExplode>Spores</soundExplode>
    </projectile>
  </ThingDef>
