			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>RAW_SHROOMANSINFESTED_RESOURCE_DEF</thingDef>
				<count>200</count>
			</li>
		</parts>
